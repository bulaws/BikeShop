{% extends 'base.html.twig' %}

{% block body %}
    <section >
        <div class="wrapper">
    {% if articles %}

        <table  class="table table-striped">
            <thead>
            <tr>
                <th>Стаття</th>
                <th>Опис</th>
                <th>Автор</th>
                <th>Дата</th>
                <th>Опцiї</th>
            </tr>
            </thead>
            <tbody>
            {% for article in articles %}
                <tr>
                    <td>
                        <a href="/admin/blog/{{ article.id }}"> {{ article.name }} </a>
                    </td>
                    <td> {{ article.text }} </td>
                    <td> {{ article.author }} </td>
                    <td> {{ article.updateAt|date('Y-m-d H:i') }} </td>
                    <td><a href="/admin/article/update/{{ article.id }}" class="btn btn-dark">Редагувати</a></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p>Статей не знайдено</p>
    {% endif %}
            <a href="/admin/article/create" class="btn btn-light">Створити нову статтю</a>
    </div>
    </section>
{% endblock %}