{% extends 'base.html.twig' %}

{% block body %}
    <div class="wrapper">
    {% if article %}
        <table  class="table table-striped">
            <thead>
            <tr>
                <th>Стаття</th>
                <th>Опис</th>
                <th>Автор</th>
                <th>Дата</th>
            </tr>
            </thead>
            <tbody>
                <tr>
                    <td>
                        <a href="/blog/{{ article.id }}"> {{ article.name }} </a>
                    </td>
                    <td> {{ article.text }} </td>
                    <td> {{ article.author }} </td>
                    <td> {{ article.updateAt|date('Y-m-d H:i') }} </td>
                </tr>
            </tbody>
        </table>
    {% else %}
        <p>Статю {{ articleId }} не знайдено</p>
    {% endif %}
    </div>
{% endblock %}